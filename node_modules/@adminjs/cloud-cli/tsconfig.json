{
  "compilerOptions": {
    "module": "nodenext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2020",
    "sourceMap": false,
    "outDir": "./lib",
    "incremental": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./template/**/*"
  ]
}
