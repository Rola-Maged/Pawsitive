{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "incremental": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
